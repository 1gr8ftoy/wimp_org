{% extends '::base.html.twig' %}

{% block body %}
<h3 style="margin-bottom: .5em;">Contact us</h3>

{{  form_start(form, {
        'attr': {
            'novalidate': 'novalidate',
        }
    })
}}

<fieldset class="fsPetDetails">
    <div>
        <div class="label">
            {% if form.name.vars.errors | length %}
                <div class="field_with_errors">
            {% endif %}
            {{ form_label(form.name) }}
            {% if form.name.vars.errors | length %}
                </div>
            {% endif %}
        </div>
        <div class="input">
            {{ form_widget(form.name) }}
            {% if form.name.vars.errors | length %}
                <div class="field_with_errors_error_list">
            {% endif %}
            {{ form_errors(form.name) }}
            {% if form.name.vars.errors | length %}
                </div>
            {% endif %}
        </div>
    </div>

    <div>
        <div class="label">
            {% if form.email.vars.errors | length %}
                <div class="field_with_errors">
            {% endif %}
            {{ form_label(form.email) }}
            {% if form.email.vars.errors | length %}
                </div>
            {% endif %}
        </div>
        <div class="input">
            {{ form_widget(form.email) }}
            {% if form.email.vars.errors | length %}
                <div class="field_with_errors_error_list">
            {% endif %}
            {{ form_errors(form.email) }}
            {% if form.email.vars.errors | length %}
                </div>
            {% endif %}
        </div>
    </div>

    <div>
        <div class="label">
            {% if form.subject.vars.errors | length %}
                <div class="field_with_errors">
            {% endif %}
            {{ form_label(form.subject) }}
            {% if form.subject.vars.errors | length %}
                </div>
            {% endif %}
        </div>
        <div class="input">
            {{ form_widget(form.subject) }}
            {% if form.subject.vars.errors | length %}
                <div class="field_with_errors_error_list">
            {% endif %}
            {{ form_errors(form.subject) }}
            {% if form.subject.vars.errors | length %}
                </div>
            {% endif %}
        </div>
    </div>

    <div>
        <div class="label">
            {% if form.message.vars.errors | length %}
                <div class="field_with_errors">
            {% endif %}
            {{ form_label(form.message) }}
            {% if form.message.vars.errors | length %}
                </div>
            {% endif %}
        </div>
        <div class="input">
            {{ form_widget(form.message) }}
            {% if form.message.vars.errors | length %}
                <div class="field_with_errors_error_list">
            {% endif %}
            {{ form_errors(form.message) }}
            {% if form.message.vars.errors | length %}
                </div>
            {% endif %}
        </div>
    </div>
</fieldset>

<div class="actions">
    <div style ="display: block; text-align: center; margin: 30px 0 20px 0;">
        {{ form_widget(form.send) }}
    </div>
</div>

{{ form_end(form) }}
{% endblock %}